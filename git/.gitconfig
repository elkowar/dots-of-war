[user]
	email = 5300871+elkowar@users.noreply.github.com
	name = elkowar
	signingkey = B558974128820CB473BD9807E321AD71B1D1F27F
[credential]
	helper = store
[core]
	autocrlf = input
	;pager = delta
[pull]
	rebase = false
[github]
	user = ElKowar

[diff]
	external = "difft"


[delta]
	syntax-theme = gruvbox
	features = side-by-side line-numbers decorations navigate

[delta "line-numbers"]
	line-numbers-left-style = cyan
[init]
	defaultBranch = master
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgsign = true
[alias]
	c = commit --verbose
	s = status -s
	d = diff
	ds = diff --stat
	dc = diff --cached
	dn = diff --numstat
	ss = status
	a = add
[push]
	autoSetupRemote = true
	default = current
